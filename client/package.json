{
  "name": "movement-parties-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@headlessui/react": "^2.2.2",
    "@nessprim/planby-pro": "^3.12.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/instrumentation-fetch": "^0.57.2",
    "@opentelemetry/sdk-trace-web": "^1.30.1",
    "@sentry/cli": "^2.45.0",
    "@sentry/core": "^9.22.0",
    "@sentry/hub": "^7.120.3",
    "@sentry/react": "^9.17.0",
    "@sentry/replay": "^7.116.0",
    "@sentry/tracing": "^7.120.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.8.3",
    "planby": "^1.1.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-facebook-login": "^4.1.1",
    "react-router-dom": "^6.30.0",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:local": "NODE_AUTH_TOKEN=$(cat .env | grep NODE_AUTH_TOKEN | cut -d '=' -f2) yarn start",
    "test": "NODE_PATH=./node_modules react-scripts test",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^29.7.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.0.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.5.3",
    "sass": "^1.85.1",
    "util": "^0.12.5",
    "whatwg-url": "^14.2.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!axios)/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test && yarn eslint . && yarn format && if [ \"$NODE_ENV\" = \"production\" ]; then yarn build; else echo 'Skipping full build'; fi"
    }
  }
}
